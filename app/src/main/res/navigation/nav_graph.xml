<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <activity
        android:id="@+id/manageTransactionActivity"
        android:name="com.example.smoiapp001.activities.ManageTransactionActivity"
        android:label="activity_manage_transaction"
        tools:layout="@layout/activity_manage_transaction" >
        <argument
            android:name="itemId"
            app:argType="integer"
            android:defaultValue="-1" />
    </activity>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.smoiapp001.activities.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_manageTransactionActivity"
            app:destination="@id/manageTransactionActivity" />
        <action
            android:id="@+id/action_mainFragment_to_manageTransactionActivity2"
            app:destination="@id/manageTransactionActivity"
            app:popUpTo="@+id/mainFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>