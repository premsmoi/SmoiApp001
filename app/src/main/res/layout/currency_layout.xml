<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    tools:context="com.example.smoiapp001.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flagIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_usa_foreground"/>
        <!-- TextView that displays the description -->
        <TextView
            android:id="@+id/currencyLabel"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/primary_text_light"
            android:layout_toRightOf="@+id/flagIcon"
            tools:text="Label" />

        <!-- A priority circle that is colored in programmatically in the adapter code -->
        <TextView
            android:id="@+id/currencyRate"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/primary_text_light"
            tools:text="Rate" />

    </RelativeLayout>

</FrameLayout>